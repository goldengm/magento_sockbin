<?xml version="1.0"?>
<config>
    <tabs>
        <snowdog translate="label" module="popupoption">
            <label>Snowdog Extensions</label>
            <sort_order>320</sort_order>
        </snowdog>
    </tabs>
    <sections>
        <popupoption  translate="label" module="popupoption">
            <label>Popup Option</label>
            <tab>snowdog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>popupoption/system_config_source_enable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <top_block_id translate="label">
                            <label>Top block id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </top_block_id>
                        <text_field_sing_up translate="label">
                            <label>Email sign up text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </text_field_sing_up>
                        <cookie_expiry translate="label">
                            <label>Cookie expiry</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>for how many days again to appear popup</comment>
                        </cookie_expiry>
                        <cookie_reset translate="label comment">
                            <frontend_type>select</frontend_type>
                            <frontend_model>Snowdog_PopupOption_Block_Adminhtml_Restart</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cookie_reset>
                        <top_block_id_mobile translate="label">
                            <label>Top block id mobile.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </top_block_id_mobile>
                        <refresh_page translate="label">
                            <label>Show popup afer refresh page.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If set to 0 or 1 show in first page.</comment>
                        </refresh_page>
                    </fields>
                </general>
            </groups>
        </popupoption>
    </sections>
</config>
