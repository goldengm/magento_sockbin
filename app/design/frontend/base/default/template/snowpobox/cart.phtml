<script>
    jQuery(document).ready(function () {
        jQuery('.qty').bind("change", updateQtyPrice);
    });

    var updateQtyPrice = function(event) {
        var boxQty = parseInt(jQuery(this).val());
        var tierPrices = jQuery.parseJSON( decodeURIComponent(jQuery(this).next().val()) );
        var minQty = 12;
        var tierQty = 12;

        jQuery.each(tierPrices, function( index, value ) {
            if ( value.price_qty < minQty ) {
                minQty = parseInt(value.price_qty);
            }
        });

        if (boxQty > minQty) {
            if (boxQty > tierQty) {
                minQty = tierQty;
            }
            var qtyOffset = boxQty % minQty;
            var updatedQty = (qtyOffset > 0) ? ((qtyOffset >= (minQty / 2)) ? boxQty + (minQty - qtyOffset) : boxQty - qtyOffset) : boxQty;
            jQuery(this).val(updatedQty);
        } else {
            jQuery(this).val(minQty);
        }
    };
</script>