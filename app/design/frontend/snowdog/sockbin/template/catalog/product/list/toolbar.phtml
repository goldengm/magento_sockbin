<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <?php if( $this->isExpanded() ): ?>
        <div class="sorter">
            <div class="sort-by">
                <label><?php echo $this->__('Sort By') ?></label>
                <label class="select-fancy">
                    <select onchange="setLocation(this.value)" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Sort By')) ?>">
                        <option value="<?php echo $this->getOrderUrl('recentlyadded', 'desc') ?>"<?php if($this->getCurrentOrder() == 'recentlyadded'): ?> selected="selected"<?php endif; ?>>
                            <?php echo $this->__("New Arrivals") ?>
                        </option>
                        <option value="<?php echo $this->getOrderUrl('lowest_price', 'asc') ?>"<?php if(($this->getCurrentOrder() == 'lowest_price' || $this->getCurrentOrder() == 'price') && $this->getCurrentDirection() == 'asc'): ?> selected="selected"<?php endif; ?>>
                            <?php echo $this->__("Lowest Price") ?>
                        </option>
                        <option value="<?php echo $this->getOrderUrl('lowest_price', 'desc') ?>"<?php if(($this->getCurrentOrder() == 'lowest_price' || $this->getCurrentOrder() == 'price') && $this->getCurrentDirection() == 'desc'): ?> selected="selected"<?php endif; ?>>
                            <?php echo $this->__("Highest Price") ?>
                        </option>
                    </select>
                </label>
            </div>
            <div class="limiter">
                <label><?php echo $this->__('Show') ?></label>
                <div class="select-fancy">
                    <select onchange="setLocation(this.value)" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Results per page')); ?>">
                    <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                        <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                            <?php echo $_limit ?>
                        </option>
                    <?php endforeach; ?>
                    </select>
                </div>
                <label class="items"><?php echo $this->__('items per page') ?></label>
            </div>
        </div>
    <?php endif; ?>
    <div class="pager">
        <?php echo $this->getPagerHtml() ?>
    </div>
</div>
<?php endif ?>
